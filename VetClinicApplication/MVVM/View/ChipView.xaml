<UserControl x:Class="VetClinicApplication.MVVM.View.ChipView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VetClinicApplication.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="DataGChips">
    <Grid Background="#FFE7D4FF">
        <TextBlock Text="List of CHIPS registered in base: "
                   Foreground="Black"
                   FontSize="27"
                   FontFamily="/VetClinicApplication;component/Fonts/#Rampart One"
                   HorizontalAlignment="Center"
                   Margin="0,30,0,0"/>
        <DataGrid Width="600"
                  Height="350"
                  Margin="100,75,100,25"
                  x:Name="DataGridChips"/>
    </Grid>
</UserControl>
